---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/SearchBar.astro';
---

<Layout>
  <main class="min-h-screen max-h-screen overflow-y-auto flex items-center justify-center p-4 relative">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-blue-300/20 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-white/5 rounded-full blur-2xl"></div>
    </div>

    <div class="flex flex-col items-center w-full max-w-lg relative z-10">
      <!-- Header con mejor diseño -->
      <header class="text-center mb-8 text-white">
        <div class="mb-4">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 backdrop-blur-md rounded-2xl mb-4 shadow-xl">
            <span class="text-2xl">🌤️</span>
          </div>
        </div>
        <h1 class="text-4xl md:text-5xl font-extralight mb-3 tracking-wide">
          <span class="bg-gradient-to-r from-white to-blue-100 bg-clip-text text-transparent">
            Weather
          </span>
          <span class="font-light">App</span>
        </h1>
        <p class="text-lg opacity-80 font-light tracking-wide">
          Descubre el clima en tiempo real
        </p>
      </header>
      
      <SearchBar />
      
      <div id="weather-container" class="w-full justify-center hidden max-h-[90vh] overflow-y-auto">
        <!-- El contenido se generará dinámicamente -->
      </div>
      
      <div id="loading" class="flex-col items-center text-white mt-8 hidden">
        <div class="relative">
          <div class="w-12 h-12 border-4 border-white/20 border-t-white rounded-full animate-spin"></div>
          <div class="absolute inset-0 w-12 h-12 border-4 border-transparent border-l-blue-200 rounded-full animate-spin animate-reverse"></div>
        </div>
        <p class="text-lg mt-4 font-light">Obteniendo datos...</p>
      </div>
      
      <div id="welcome" class="text-center text-white mt-12">
        <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-white/20 to-white/10 backdrop-blur-md rounded-3xl mb-6 shadow-2xl">
          <span class="text-4xl">🌍</span>
        </div>
        <h2 class="text-2xl font-light mb-3 opacity-90">Explora el Mundo</h2>
        <p class="text-lg opacity-70 font-light leading-relaxed max-w-sm mx-auto">
          Busca cualquier ciudad y descubre su clima actual con información detallada
        </p>
        
        <!-- Sugerencias de ciudades populares -->
        <div class="mt-8">
          <p class="text-sm opacity-60 mb-4">Ciudades populares:</p>
          <div class="flex flex-wrap justify-center gap-2">
            <button class="city-suggestion px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm hover:bg-white/20 transition-all duration-300 border border-white/20" data-city="Londres">
              🇬🇧 Londres
            </button>
            <button class="city-suggestion px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm hover:bg-white/20 transition-all duration-300 border border-white/20" data-city="Tokyo">
              🇯🇵 Tokio
            </button>
            <button class="city-suggestion px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm hover:bg-white/20 transition-all duration-300 border border-white/20" data-city="New York">
              🇺🇸 Nueva York
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { getCurrentWeatherWithHourly } from '../services/weatherApi';

  // Declarar tipos para TypeScript
  declare global {
    interface Window {
      showDayHourlyForecast: (dayIndex: number) => void;
      selectSpecificDate: (dateString: string, dayIndex: number) => void;
      searchCustomDateForecast: (dateString: string) => Promise<void>;
      showSmartComparator: () => void;
    }
  }
  
  // Función para generar recomendaciones inteligentes
  function generateIntelligentRecommendations() {
    const resultsContainer = document.getElementById('analysis-results')!;
    const validData = selectedDatesData.filter(data => data && data.data);
    
    if (validData.length < 2) {
      return;
    }
    
    // Analizar los datos
    const analysis = analyzeWeatherConditions(validData);
    
    // Generar HTML de resultados
    const resultsHTML = `
      <div class="bg-gradient-to-br from-purple-500/20 to-pink-500/20 rounded-3xl p-6 border border-purple-400/30">
        <h5 class="text-lg font-medium mb-4 flex items-center">
          <span class="text-2xl mr-3">🧙‍♂️</span>
          Recomendaciones Inteligentes
        </h5>
        
        <!-- Recomendación principal -->
        <div class="bg-white/10 rounded-2xl p-4 mb-4 backdrop-blur-sm">
          <div class="text-xl mb-2">${analysis.mainRecommendation.icon}</div>
          <h6 class="text-lg font-medium text-${analysis.mainRecommendation.color}-300 mb-2">
            ${analysis.mainRecommendation.title}
          </h6>
          <p class="text-sm opacity-90">${analysis.mainRecommendation.message}</p>
        </div>
        
        <!-- Comparación de fechas -->
        <div class="grid grid-cols-1 md:grid-cols-${validData.length} gap-4 mb-4">
          ${validData.map((item, index) => `
            <div class="bg-white/10 rounded-2xl p-3 text-center">
              <div class="text-sm font-medium mb-2">
                ${index === 0 ? '🟢' : index === 1 ? '🔵' : '🟡'} 
                ${formatDateTime(item.dateString, item.hour)}
              </div>
              <div class="flex items-center justify-center gap-2 mb-2">
                <img src="${item.data.condition.icon}" class="w-8 h-8" />
                <span class="text-lg font-bold">${Math.round(item.data.temp_c)}°</span>
              </div>
              <div class="text-xs space-y-1">
                <div>${item.data.condition.text}</div>
                <div class="text-blue-300">🌧 ${item.data.chance_of_rain || 0}%</div>
                <div class="text-gray-300">🌬 ${Math.round(item.data.wind_kph)} km/h</div>
              </div>
            </div>
          `).join('')}
        </div>
        
        <!-- Recomendaciones adicionales -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          ${analysis.additionalRecommendations.map(rec => `
            <div class="bg-white/10 rounded-xl p-3 backdrop-blur-sm">
              <div class="flex items-center gap-2 mb-2">
                <span class="text-lg">${rec.icon}</span>
                <span class="text-sm font-medium">${rec.title}</span>
              </div>
              <p class="text-xs opacity-80">${rec.message}</p>
            </div>
          `).join('')}
        </div>
        
        <!-- Métricas clave -->
        <div class="mt-4 pt-4 border-t border-white/20">
          <h6 class="text-sm font-medium mb-3 opacity-90">Métricas de Comparación:</h6>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-3 text-xs">
            <div class="text-center">
              <div class="opacity-70">Temp. Promedio</div>
              <div class="font-bold text-orange-300">${analysis.metrics.avgTemp}°C</div>
            </div>
            <div class="text-center">
              <div class="opacity-70">Lluvia Promedio</div>
              <div class="font-bold text-blue-300">${analysis.metrics.avgRain}%</div>
            </div>
            <div class="text-center">
              <div class="opacity-70">Mejor Momento</div>
              <div class="font-bold text-green-300">${analysis.metrics.bestTime}</div>
            </div>
            <div class="text-center">
              <div class="opacity-70">Condición</div>
              <div class="font-bold text-purple-300">${analysis.metrics.overallCondition}</div>
            </div>
          </div>
        </div>
      </div>
    `;
    
    resultsContainer.innerHTML = resultsHTML;
    resultsContainer.classList.remove('hidden');
    
    // Scroll suave hacia los resultados
    setTimeout(() => {
      resultsContainer.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }, 100);
  }
  
  // Funciones auxiliares para el análisis
  function analyzeWeatherConditions(dataArray) {
    const temps = dataArray.map(d => d.data.temp_c);
    const rains = dataArray.map(d => d.data.chance_of_rain || 0);
    const winds = dataArray.map(d => d.data.wind_kph);
    const conditions = dataArray.map(d => d.data.condition.text.toLowerCase());
    
    const avgTemp = Math.round(temps.reduce((a, b) => a + b) / temps.length);
    const avgRain = Math.round(rains.reduce((a, b) => a + b) / rains.length);
    const maxRain = Math.max(...rains);
    
    // Encontrar el mejor momento
    let bestIndex = 0;
    let bestScore = -1000;
    
    dataArray.forEach((item, index) => {
      let score = 0;
      const temp = item.data.temp_c;
      const rain = item.data.chance_of_rain || 0;
      const wind = item.data.wind_kph;
      const condition = item.data.condition.text.toLowerCase();
      
      // Puntuación por temperatura (20-25°C es ideal)
      if (temp >= 20 && temp <= 25) score += 50;
      else if (temp >= 15 && temp <= 30) score += 30;
      else if (temp >= 10 && temp <= 35) score += 10;
      else score -= 20;
      
      // Puntuación por lluvia
      if (rain < 10) score += 40;
      else if (rain < 30) score += 20;
      else if (rain < 50) score += 0;
      else score -= 30;
      
      // Puntuación por viento
      if (wind < 10) score += 20;
      else if (wind < 20) score += 10;
      else if (wind > 30) score -= 10;
      
      // Puntuación por condición
      if (condition.includes('sunny') || condition.includes('clear')) score += 30;
      else if (condition.includes('cloud')) score += 10;
      else if (condition.includes('rain') || condition.includes('storm')) score -= 20;
      
      if (score > bestScore) {
        bestScore = score;
        bestIndex = index;
      }
    });
    
    const mainRecommendation = generateMainRecommendation(dataArray, avgTemp, avgRain, maxRain, conditions);
    const additionalRecommendations = generateAdditionalRecommendations(dataArray, avgTemp, avgRain, temps, rains);
    
    return {
      mainRecommendation,
      additionalRecommendations,
      metrics: {
        avgTemp,
        avgRain,
        bestTime: formatDateTime(dataArray[bestIndex].dateString, dataArray[bestIndex].hour),
        overallCondition: getOverallCondition(avgTemp, avgRain)
      }
    };
  }
  
  function generateMainRecommendation(dataArray, avgTemp, avgRain, maxRain, conditions) {
    if (maxRain > 70) {
      return {
        icon: '☔️',
        title: 'Sal con paraguas',
        message: 'Alta probabilidad de lluvia. Lleva paraguas y ropa impermeable.',
        color: 'blue'
      };
    }
    
    if (avgRain < 10 && avgTemp >= 20 && avgTemp <= 28) {
      return {
        icon: '☀️',
        title: 'Perfecto para actividades al aire libre',
        message: 'Condiciones ideales con baja probabilidad de lluvia y temperatura agradable.',
        color: 'yellow'
      };
    }
    
    if (avgRain < 20 && !conditions.some(c => c.includes('rain'))) {
      return {
        icon: '👕',
        title: 'Buen día para lavar tus calzones',
        message: 'Condiciones favorables para secar ropa al aire libre.',
        color: 'green'
      };
    }
    
    if (avgTemp > 30) {
      return {
        icon: '🌡️',
        title: 'Mantente fresco',
        message: 'Temperaturas altas. Busca sombra y mantén hidratación.',
        color: 'red'
      };
    }
    
    if (avgTemp < 10) {
      return {
        icon: '❄️',
        title: 'Abrígate bien',
        message: 'Temperaturas bajas. Usa varias capas de ropa.',
        color: 'blue'
      };
    }
    
    return {
      icon: '🌤️',
      title: 'Condiciones variables',
      message: 'Revisa el pronóstico antes de cada actividad.',
      color: 'purple'
    };
  }
  
  function generateAdditionalRecommendations(dataArray, avgTemp, avgRain, temps, rains) {
    const recommendations = [];
    
    // Recomendación de ropa
    if (avgTemp < 15) {
      recommendations.push({
        icon: '🧥',
        title: 'Ropa abrigada',
        message: 'Chaqueta, bufanda y guantes recomendados.'
      });
    } else if (avgTemp > 25) {
      recommendations.push({
        icon: '👕',
        title: 'Ropa ligera',
        message: 'Usa ropa fresca y colores claros.'
      });
    }
    
    // Recomendación de hidratación
    if (avgTemp > 25 || Math.max(...temps) > 30) {
      recommendations.push({
        icon: '💧',
        title: 'Hidrátate bien',
        message: 'Lleva agua y bebe frecuentemente.'
      });
    }
    
    // Recomendación de actividades
    if (avgRain > 50) {
      recommendations.push({
        icon: '🏠',
        title: 'Actividades bajo techo',
        message: 'Considera planes en interiores.'
      });
    } else if (avgRain < 20 && avgTemp >= 18 && avgTemp <= 28) {
      recommendations.push({
        icon: '🏞️',
        title: 'Actividades al aire libre',
        message: 'Excelente para picnics, deportes o paseos.'
      });
    }
    
    // Recomendación de protección solar
    if (dataArray.some(d => d.data.condition.text.toLowerCase().includes('sunny'))) {
      recommendations.push({
        icon: '🕶️',
        title: 'Protección solar',
        message: 'Usa protector solar y gafas de sol.'
      });
    }
    
    return recommendations;
  }
  
  function formatDateTime(dateString, hour) {
    // Parsear la fecha correctamente desde el string YYYY-MM-DD
    const [year, month, day] = dateString.split('-').map(Number);
    const date = new Date(year, month - 1, day); // month - 1 porque Date usa 0-based months
    
    const dayName = date.toLocaleDateString('es-ES', { weekday: 'short' });
    const dayMonth = date.toLocaleDateString('es-ES', { day: 'numeric', month: 'short' });
    const hourStr = hour === 0 ? '12 AM' : hour === 12 ? '12 PM' : hour < 12 ? `${hour} AM` : `${hour - 12} PM`;
    
    console.log('formatDateTime - dateString:', dateString);
    console.log('formatDateTime - fecha parseada:', date.toLocaleDateString('es-ES'));
    console.log('formatDateTime - resultado:', `${dayName} ${dayMonth} ${hourStr}`);
    
    return `${dayName} ${dayMonth} ${hourStr}`;
  }
  
  function getOverallCondition(avgTemp, avgRain) {
    if (avgRain > 60) return 'Lluvioso';
    if (avgRain > 30) return 'Variable';
    if (avgTemp > 30) return 'Muy caliente';
    if (avgTemp < 10) return 'Muy frío';
    if (avgTemp >= 20 && avgTemp <= 25 && avgRain < 20) return 'Ideal';
    return 'Bueno';
  }
  
  // Función para mostrar el selector de fecha
  function showDateSelector() {
    if (!globalWeatherData) return;
    
    // Obtener fechas disponibles (hasta 10 días desde hoy, incluyendo hoy)
    const today = new Date();
    const availableDates = [];
    
    for (let i = 0; i < 10; i++) {
      const date = new Date();
      date.setDate(date.getDate() + i);
      
      // Normalizar para evitar problemas de zona horaria
      const normalizedDate = new Date(date.getFullYear(), date.getMonth(), date.getDate());
      
      availableDates.push({
        date: normalizedDate,
        dateString: normalizedDate.toISOString().split('T')[0],
        displayName: i === 0 ? 'Hoy' : 
                    i === 1 ? 'Mañana' : 
                    i === 2 ? 'Pasado mañana' : 
                    normalizedDate.toLocaleDateString('es-ES', { weekday: 'long', day: 'numeric', month: 'short' }),
        dayIndex: i
      });
    }
    
    // Crear modal del selector de fecha
    const modal = document.createElement('div');
    modal.id = 'date-selector-modal';
    modal.className = 'fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 p-2 md:p-4';
    
    const datesHTML = availableDates.map(dateInfo => {
      const isAvailable = dateInfo.dayIndex < (globalWeatherData.forecast?.forecastday?.length || 0);
      const buttonClass = isAvailable 
        ? 'bg-white/10 hover:bg-white/20 border-white/30 hover:border-white/50 cursor-pointer' 
        : 'bg-gray-500/20 border-gray-500/30 cursor-not-allowed opacity-50';
      
      return `
        <button class="${buttonClass} backdrop-blur-sm rounded-2xl p-4 transition-all duration-300 text-center border ${
          isAvailable ? 'transform hover:scale-105' : ''
        }" ${isAvailable ? `onclick="selectSpecificDate('${dateInfo.dateString}', ${dateInfo.dayIndex})"` : 'disabled'}>
          <div class="text-sm font-medium mb-1">${dateInfo.displayName}</div>
          <div class="text-xs opacity-70">${dateInfo.date.getDate()} ${dateInfo.date.toLocaleDateString('es-ES', { month: 'short' })}</div>
          <div class="text-xs opacity-50">${dateInfo.dateString}</div>
          ${!isAvailable ? '<div class="text-xs text-red-300 mt-1">No disponible</div>' : ''}
        </button>
      `;
    }).join('');
    
    modal.innerHTML = `
      <div class="bg-white/20 backdrop-blur-xl border border-white/30 rounded-3xl p-4 md:p-6 max-w-2xl w-full text-white transform transition-all duration-300 scale-95 opacity-0 max-h-[90vh] overflow-y-auto" id="date-selector-content">
        <!-- Header del modal -->
        <div class="flex items-center justify-between mb-6">
          <div>
            <h3 class="text-xl font-medium">Seleccionar Fecha</h3>
            <p class="text-sm opacity-70">Elige la fecha para ver el pronóstico detallado</p>
          </div>
          <button id="close-date-selector" class="w-8 h-8 bg-white/20 hover:bg-white/30 rounded-full flex items-center justify-center transition-colors duration-200">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
        
        <!-- Información de la ubicación -->
        <div class="bg-white/10 rounded-2xl p-4 mb-6 text-center backdrop-blur-sm">
          <h4 class="text-lg font-medium opacity-95">${globalWeatherData.location.name}, ${globalWeatherData.location.country}</h4>
          <p class="text-sm opacity-70">Selecciona una fecha para ver el pronóstico por horas</p>
          <p class="text-xs opacity-50 mt-2">Rango: ${today.toISOString().split('T')[0]} a ${new Date(today.getTime() + 9 * 24 * 60 * 60 * 1000).toISOString().split('T')[0]}</p>
        </div>
        
        <!-- Selector de fechas -->
        <div class="mb-6">
          <h5 class="text-lg font-medium mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-300" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
            </svg>
            Fechas Disponibles
          </h5>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-3">
            ${datesHTML}
          </div>
        </div>
        
        <!-- Selector de fecha personalizada -->
        <div class="mb-6">
          <h5 class="text-lg font-medium mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-green-300" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            Fecha Personalizada
          </h5>
          <div class="bg-white/10 rounded-2xl p-4 backdrop-blur-sm">
            <div class="flex flex-col md:flex-row gap-3 items-end">
              <div class="flex-1">
                <label class="block text-sm opacity-70 mb-2">Seleccionar fecha:</label>
                <input type="date" id="custom-date" class="w-full px-3 py-2 bg-white/20 border border-white/30 rounded-xl text-white placeholder-white/50 focus:outline-none focus:border-blue-400 focus:bg-white/30" 
                       min="${today.toISOString().split('T')[0]}" 
                       max="${new Date(today.getTime() + 8 * 24 * 60 * 60 * 1000).toISOString().split('T')[0]}">
              </div>
              <button id="search-custom-date" class="px-6 py-2 bg-blue-500/30 hover:bg-blue-500/40 border border-blue-400/50 rounded-xl transition-all duration-300 text-sm font-medium">
                Buscar
              </button>
            </div>
            <p class="text-xs opacity-60 mt-2">Nota: Solo disponible hasta 10 días desde hoy</p>
          </div>
        </div>
        
        <!-- Botón cerrar -->
        <button id="close-date-selector-btn" class="w-full py-3 bg-white/20 hover:bg-white/30 backdrop-blur-sm rounded-2xl transition-all duration-300 text-sm font-medium border border-white/30 hover:border-white/50">
          Cerrar
        </button>
      </div>
    `;
    
    document.body.appendChild(modal);
    
    // Animar entrada del modal
    setTimeout(() => {
      const modalContent = document.getElementById('date-selector-content')!;
      modalContent.style.transform = 'scale(1)';
      modalContent.style.opacity = '1';
    }, 10);
    
    // Event listeners para cerrar el modal
    const closeBtn = document.getElementById('close-date-selector')!;
    const closeBtnFooter = document.getElementById('close-date-selector-btn')!;
    const searchCustomBtn = document.getElementById('search-custom-date')!;
    
    const closeModal = () => {
      const modalContent = document.getElementById('date-selector-content')!;
      modalContent.style.transform = 'scale(0.95)';
      modalContent.style.opacity = '0';
      
      setTimeout(() => {
        document.body.removeChild(modal);
      }, 300);
    };
    
    // Función para buscar fecha personalizada
    const searchCustomDate = () => {
      const dateInput = document.getElementById('custom-date') as HTMLInputElement;
      if (dateInput.value) {
        searchCustomDateForecast(dateInput.value);
        closeModal();
      }
    };
    
    closeBtn.addEventListener('click', closeModal);
    closeBtnFooter.addEventListener('click', closeModal);
    searchCustomBtn.addEventListener('click', searchCustomDate);
    
    // Cerrar al hacer clic fuera del modal
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });
    
    // Cerrar con tecla Escape
    const handleKeyDown = (e: KeyboardEvent) => {
      if (e.key === 'Escape') {
        e.preventDefault();
        e.stopPropagation();
        closeModal();
        document.removeEventListener('keydown', handleKeyDown);
      }
    };
    
    document.addEventListener('keydown', handleKeyDown);
  }
  
  // Función para seleccionar una fecha específica de las disponibles
  function selectSpecificDate(dateString: string, dayIndex: number) {
    console.log('selectSpecificDate - dateString:', dateString);
    console.log('selectSpecificDate - dayIndex:', dayIndex);
    
    // Cerrar el selector de fecha
    const modal = document.getElementById('date-selector-modal');
    if (modal) {
      document.body.removeChild(modal);
    }
    
    // Mostrar el pronóstico del día seleccionado
    showDayHourlyForecast(dayIndex);
  }
  
  // Función para buscar pronóstico de fecha personalizada
  async function searchCustomDateForecast(dateString: string) {
    if (!globalWeatherData) return;
    
